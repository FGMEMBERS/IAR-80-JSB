<?xml version="1.0"?>


<PropertyList>
  <path>oil-temp.ac</path>

  <animation>
    <type>rotate</type>
    <object-name>Needle</object-name>
    <property>/engines/engine/oil-temp-ind</property>
    <interpolation>
      <entry><ind> 0</ind><dep>  0</dep></entry>
      <entry><ind>40</ind><dep> 40</dep></entry>
      <entry><ind>60</ind><dep> 75</dep></entry>
      <entry><ind>80</ind><dep>125</dep></entry>
      <entry><ind>100</ind><dep>180</dep></entry>
      <entry><ind>120</ind><dep>245</dep></entry>
      <entry><ind>130</ind><dep>286</dep></entry>
      <entry><ind>140</ind><dep>333</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

	<effect>
		<inherits-from>Aircraft/IAR-80-JSB/Models/Effects/iar80_glass_internal</inherits-from>
		<object-name>Lens</object-name>
	</effect>

	<effect>
		<inherits-from>Aircraft/IAR-80-JSB/Models/Effects/iar80_opaque</inherits-from>
		<object-name>Cylinder_1</object-name>
	</effect>

 <effect>
   <inherits-from>Effects/model-transparent</inherits-from>
   <object-name>Cylinder.001</object-name>
 </effect>

	<animation>
		<type>material</type>
		<object-name>Cylinder_1</object-name>
		<condition>
			<equals>
				<property>controls/lighting/panel-left</property>
				<value>1</value>
			</equals>
		</condition>
		<emission>
			<red>0.03</red>
			<green>0.04</green>
			<blue>0.05</blue>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Cylinder.001</object-name>
		<condition>
			<equals>
				<property>controls/lighting/panel-left</property>
				<value>1</value>
			</equals>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.6</green>
			<blue>0.5</blue>
		</emission>
	</animation>

	<!--    LABEL TEXT activated by hotspots -->
	<text>
		<name>LabelText</name>
		<type type="string">literal</type>
		<text type="string">Oil Temperature</text>
		<draw-text type="bool">true</draw-text>
		<font>Helvetica.txf</font>
		<character-size type="double">0.012</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
		<axis-alignment>yz-plane</axis-alignment>
		<max-height>0.2</max-height>
		<max-width>0.07</max-width>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
		<alignment>center-center</alignment>
		<offsets>
			<x-m> 0.01</x-m>
			<y-m> 0.0 </y-m>
			<z-m>-0.01</z-m>
		</offsets>
	</text>

	<animation>
		<type>material</type>
		<object-name>LabelText</object-name>
		<emission>
			<red>1.0</red>
			<green>0.8</green>
			<blue>0.0</blue>
		</emission>
	</animation>

	<animation>
		<type>select</type>
		<object-name>LabelText</object-name>
		<condition>
			<property>/sim/panel-hotspots</property>
		</condition>
	</animation>

</PropertyList>
