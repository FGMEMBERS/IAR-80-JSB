<?xml version="1.0"?>

<PropertyList>

 <path>clock.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>Sec</object-name>
		<property>/sim/time/utc/day-seconds</property>
		<factor>6</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Min</object-name>
		<property>/sim/time/utc/day-seconds</property>
		<factor>0.1</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Min</object-name>
		<property>/sim/time/local-offset</property>
		<factor>0.1</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Hour</object-name>
		<property>/sim/time/utc/day-seconds</property>
		<factor>0.008333</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Hour</object-name>
		<property>/sim/time/local-offset</property>
		<factor>0.008333</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Ring</object-name>
		<property>/instrumentation/clock/ring-set</property>
		<factor>6</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<effect>
		<inherits-from>Aircraft/IAR80/Models/Effects/iar80_glass_internal</inherits-from>
		<object-name>Lens</object-name>
	</effect>

 <effect>
	 <inherits-from>Aircraft/IAR80/Models/Effects/iar80_opaque</inherits-from>
	 <object-name>Cylinder_1</object-name>
 </effect>

 <effect>
   <inherits-from>Effects/model-transparent</inherits-from>
   <object-name>Cylinder.001</object-name>
 </effect>

	<animation>
		<type>pick</type>
		<object-name>Ring</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/clock/ring-set</property>
				<step>1</step>
				<min>0</min>
				<max>59</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/clock/ring-set</property>
				<step>-1</step>
				<min>0</min>
				<max>59</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/clock/ring-set</property>
				<step>1</step>
				<min>0</min>
				<max>59</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/clock/ring-set</property>
				<step>-1</step>
				<min>0</min>
				<max>59</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Cylinder_1</object-name>
		<condition>
			<equals>
				<property>controls/lighting/panel-right</property>
				<value>1</value>
			</equals>
		</condition>
		<emission>
			<red>0.03</red>
			<green>0.04</green>
			<blue>0.05</blue>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Cylinder.001</object-name>
		<!--<object-name>Min</object-name>
		<object-name>Hour</object-name>-->
		<condition>
			<equals>
				<property>controls/lighting/panel-right</property>
				<value>1</value>
			</equals>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.6</green>
			<blue>0.5</blue>
		</emission>
	</animation>

   <!--    LABEL TEXT activated by hotspots -->
		<text>
			<name>LabelText</name>
			<type type="string">literal</type>
			<text type="string">Clock</text>
			<draw-text type="bool">true</draw-text>
			<font>Helvetica.txf</font>
			<character-size type="double">0.012</character-size>
			<character-aspect-ratio type="double">1.0</character-aspect-ratio>
			<axis-alignment>yz-plane</axis-alignment>
			<max-height>0.2</max-height>
			<max-width>0.07</max-width>
			<font-resolution>
				<width type="int">32</width>
				<height type="int">32</height>
			</font-resolution>
			<alignment>center-center</alignment>
			<offsets>
				<x-m> 0.01</x-m>
				<y-m> 0.0 </y-m>
				<z-m>-0.01</z-m>
			</offsets>
		</text>

	<animation>
		<type>material</type>
		<object-name>LabelText</object-name>
		<emission>
			<red>1.0</red>
			<green>0.8</green>
			<blue>0.0</blue>
		</emission>
	</animation>

	<animation>
		<type>select</type>
		<object-name>LabelText</object-name>
		<condition>
			<property>/sim/panel-hotspots</property>
		</condition>
	</animation>

</PropertyList>


