<?xml version="1.0"?>
<PropertyList>

 <path>turo.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>Needle</object-name>
		<property>/engines/engine/rpm</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>500</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>1000</ind>
				<dep>72</dep>
			</entry>
			<entry>
				<ind>1500</ind>
				<dep>144</dep>
			</entry>
			<entry>
				<ind>2000</ind>
				<dep>216</dep>
			</entry>
			<entry>
				<ind>2500</ind>
				<dep>288</dep>
			</entry>
			<entry>
				<ind>3000</ind>
				<dep>360</dep>
			</entry>
			<entry>
				<ind>3500</ind>
				<dep>432</dep>
			</entry>
			<entry>
				<ind>4000</ind>
				<dep>504</dep>
			</entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<effect>
		<inherits-from>Aircraft/IAR80/Models/Effects/iar80_glass_internal</inherits-from>
		<object-name>Lens</object-name>
	</effect>

	<effect>
		<inherits-from>Aircraft/IAR80/Models/Effects/iar80_opaque</inherits-from>
		<object-name>Cylinder_1</object-name>
	</effect>

 <effect>
   <inherits-from>Effects/model-transparent</inherits-from>
   <object-name>Cylinder.001</object-name>
 </effect>

	<animation>
		<type>material</type>
		<object-name>Cylinder_1</object-name>
		<condition>
			<equals>
				<property>controls/lighting/panel-left</property>
				<value>1</value>
			</equals>
		</condition>
		<emission>
			<red>0.03</red>
			<green>0.04</green>
			<blue>0.05</blue>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Cylinder.001</object-name>
		<condition>
			<equals>
				<property>controls/lighting/panel-left</property>
				<value>1</value>
			</equals>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.6</green>
			<blue>0.5</blue>
		</emission>
	</animation>

	<!--    LABEL TEXT activated by hotspots -->
	<text>
		<name>LabelText</name>
		<type type="string">literal</type>
		<text type="string">RPM Indicator</text>
		<draw-text type="bool">true</draw-text>
		<font>Helvetica.txf</font>
		<character-size type="double">0.012</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
		<axis-alignment>yz-plane</axis-alignment>
		<max-height>0.2</max-height>
		<max-width>0.07</max-width>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
		<alignment>center-center</alignment>
		<offsets>
			<x-m> 0.01</x-m>
			<y-m> 0.0 </y-m>
			<z-m>-0.01</z-m>
		</offsets>
	</text>

	<animation>
		<type>material</type>
		<object-name>LabelText</object-name>
		<emission>
			<red>1.0</red>
			<green>0.8</green>
			<blue>0.0</blue>
		</emission>
	</animation>

	<animation>
		<type>select</type>
		<object-name>LabelText</object-name>
		<condition>
			<property>/sim/panel-hotspots</property>
		</condition>
	</animation>

</PropertyList>

