<?xml version="1.0"?>

<PropertyList>
  <path>mag-compass.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>Ball</object-name>
		<property>/instrumentation/magnetic-compass/indicated-heading-deg</property>
		<factor>1</factor>
		<center>
			<x-m>-0.03</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Ring</object-name>
		<property>/instrumentation/magnetic-compass/ring-heading-deg</property>
		<factor>1</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<effect>
		<inherits-from>Aircraft/IAR80/Models/Effects/iar80_glass_internal</inherits-from>
		<object-name>Lens</object-name>
	</effect>

 <effect>
	 <inherits-from>Aircraft/IAR80/Models/Effects/iar80_opaque</inherits-from>
	 <object-name>Ball_1</object-name>
	 <object-name>Ring_1</object-name>
 </effect>

	<animation>
		<type>pick</type>
		<object-name>knob</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/magnetic-compass/ring-heading-deg</property>
				<step>1</step>
				<min>0</min>
				<max>359</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/magnetic-compass/ring-heading-deg</property>
				<step>-1</step>
				<min>0</min>
				<max>359</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/magnetic-compass/ring-heading-deg</property>
				<step>1</step>
				<min>0</min>
				<max>359</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/magnetic-compass/ring-heading-deg</property>
				<step>-1</step>
				<min>0</min>
				<max>359</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>

	<!-- Lighting -->
	<animation>
		<type>material</type>
		<object-name>Ball_1</object-name>
		<object-name>Ring_1</object-name>
		<condition>
			<and>
				<equals>
					<property>controls/lighting/panel-right</property>
					<value>1</value>
				</equals>
				<equals>
					<property>controls/lighting/panel-left</property>
					<value>1</value>
				</equals>
			</and>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.6</green>
			<blue>0.5</blue>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Ball_1</object-name>
		<object-name>Ring_1</object-name>
		<condition>
			<or>
				<equals>
					<property>controls/lighting/panel-right</property>
					<value>1</value>
				</equals>
				<equals>
					<property>controls/lighting/panel-left</property>
					<value>1</value>
				</equals>
			</or>
		</condition>
		<emission>
			<red>0.1</red>
			<green>0.3</green>
			<blue>0.25</blue>
		</emission>
	</animation>

	<!--    LABEL TEXT activated by hotspots -->
	<text>
		<name>LabelText</name>
		<type type="string">literal</type>
		<text type="string">Magnetic Compass</text>
		<draw-text type="bool">true</draw-text>
		<font>Helvetica.txf</font>
		<character-size type="double">0.012</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
		<axis-alignment>yz-plane</axis-alignment>
		<max-height>0.2</max-height>
		<max-width>0.07</max-width>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
		<alignment>center-center</alignment>
		<offsets>
			<x-m> 0.02</x-m>
			<y-m> 0.0 </y-m>
			<z-m>-0.01</z-m>
		</offsets>
	</text>

	<animation>
		<type>material</type>
		<object-name>LabelText</object-name>
		<emission>
			<red>1.0</red>
			<green>0.8</green>
			<blue>0.0</blue>
		</emission>
	</animation>

	<animation>
		<type>select</type>
		<object-name>LabelText</object-name>
		<condition>
			<property>/sim/panel-hotspots</property>
		</condition>
	</animation>

</PropertyList>
